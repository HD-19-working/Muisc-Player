/* components/SongTag/SongTag.wxss */
.container{
  display: flex;
  align-items: center;
  /* border-top-right-radius: 22px; */
  border-bottom-right-radius: 22px;
  width: 94%;
  color: whitesmoke;
  background: rgba(40, 40, 40, 0.6);
  position: fixed;
  bottom: -1px;
  backdrop-filter: blur(15px);
  height: 48px;
}
.lyric_container{
  max-width: calc(100% - 74px);
  position: absolute;
  top: -20px;
  right: 0px;
  height: 20px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 14px;
  background: rgba(40, 40, 40, 0.9);
  backdrop-filter: blur(15px);
  border-top-right-radius: 15px;
  border-bottom-right-radius: 0;
  border-top-left-radius: 10px;
  padding: 0 10px;
  box-sizing: border-box;
  /* color: rgba(255, 68, 0, 0.952); */
  color: rgb(218, 216, 216);
  /* color: rgb(83, 139, 241); */
  font-weight: 600;
}
.song_img{
  width: 68px;
  height: 68px;
  position: relative;
  top: -10px;
  margin: 0 10px;
  border-radius: 12px;
}
.song_info{
  width: calc(100% - 64px - 34px - 60px);
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.song_name,.song_lyric{
  width: 100%;
}
.song_lyric{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.button_img{
  width: 34px;
  margin: 0 20px;
}