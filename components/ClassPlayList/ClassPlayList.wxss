/* components/ClassPlayList/ClassPlayList.wxss */
.container{
  width: 100%;
  color: whitesmoke;
  position: relative;
  overflow: hidden;
}
.image_item{
  width: 100%;
  border-radius: 12px;
}
.masking{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  background: linear-gradient(transparent 70%,rgba(20,20,20,0.2) 80%,rgba(20,20,20) 96%);
}
.playCount_tag{
  display: flex;
  align-items: center;
  background-color: rgba(20,20,20,0.5);
  backdrop-filter: blur(6px);
  position: absolute;
  border-radius: 10px;
  padding: 5px 6px;
  font-size: 14px;
  font-family: "微软正黑体";
  font-weight: 600;
  top: -1px;
  left: -1px;
}
.tag_image{
  width: 14px;
  margin-right: 3px;
}
.content_container{
  position: absolute;
  bottom: 15px;
  white-space: nowrap;
  width: 100%;
  box-sizing: border-box;
  padding: 0 5px;
  overflow: hidden;
  text-overflow: ellipsis;
}
