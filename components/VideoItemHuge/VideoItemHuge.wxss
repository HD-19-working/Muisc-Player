/* components/VideoItemHuge/VideoItemHuge.wxss */
.mv_box{
  font-size: 12px;
  font-family: "微软正黑体";
  color: whitesmoke;
  padding: 5px;
  background-color: #282828;
  border-radius: 15px;
  margin-bottom: 10px;
}
.video_image_box{
  position: relative;
}
.video_image{
  width: 100%;
  border-radius: 12px;
  /* box-shadow: 1px 1px 4px 2px #A0a4a4; */
  overflow: hidden;
  box-shadow: 0 0 6px 3px #161616;
}
.video_text{
  padding: 5px 5px;
}
.content_text,.creator_text{
  overflow: hidden;
  text-overflow:ellipsis; /* 文本超出呈现方式：省略号 */
  white-space: nowrap;
}
.content_text{
  font-size: 18px;
  line-height: 24px;
}
.creator_text{
  color:#C0C0C0;
  margin-top: 5px;
  font-size: 12px;
}
.video_tag{
  position: absolute;
  width: 100%;
  height: 100%;
  color: white;
  bottom: 0;
  padding: 14px;
  box-sizing: border-box;
  background: linear-gradient(rgba(18,18,18,0.4) 30%,transparent);
}
.name_gap{
  padding: 0 2px;
}
.playcount_box{
  position: absolute;
  bottom: 20px;
  font-size: 16px;
  color: white;
}
