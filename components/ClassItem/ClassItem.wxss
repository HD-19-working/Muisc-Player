/* components/ClassItem/ClassItem.wxss */
.box{
  width: 100%;
  height: 160px;
  border-radius: 10px;
  position: relative;
  filter: brightness(1.1);
  overflow: hidden;
}
.content_text{
  color: white;
  font-weight: 600;
  font-size: 22px;
  font-family: "微软正黑体";
  padding: 15px;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.content_img{
  width: 68%;
  position: absolute;
  transform: rotateZ(20deg);
  right: -5px;
  bottom: -20px;
}